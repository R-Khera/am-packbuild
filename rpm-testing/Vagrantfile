# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|

  config.vm.box = "centos/7"

  # VirtualBox Guest Additions not installed in "centos/7" box, using bridge device for now!
  # config.vm.network "forwarded_port", guest: 80, host: 8080
  # config.vm.network "private_network", ip: "192.168.33.66"
  config.vm.network "public_network"

  # VirtualBox Guest Additions not installed in "centos/7" box, using rsync for now!
  config.vm.synced_folder "../", "/am-packbuild", type: "rsync", rsync__enclude: ".git/"
  config.vm.synced_folder ".", "/home/vagrant/sync", disabled: true

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
  end

  config.vm.provision "shell", inline: <<-SHELL

    # Configure yum repository
    sudo cp /am-packbuild/rpm-testing/archivematica.repo /etc/yum.repos.d

    # Install packages
    sudo yum --enablerepo=archivematica clean metadata
    sudo yum update -y
    sudo yum install -y epel-release
    sudo yum install -y python-pip mariadb-server gearmand java-1.8.0-openjdk-headless
    sudo yum install -y archivematica-storage-service archivematica-storage-service-frontend archivematica-common archivematica-mcp-client archivematica-mcp-server archivematica-dashboard

    # Enable services
    sudo systemctl enable mariadb
    sudo systemctl start mariadb
    sudo systemctl enable gearmand
    sudo systemctl start gearmand
    sudo systemctl enable archivematica-storage-service
    sudo systemctl enable archivematica-dashboard
    sudo systemctl enable archivematica-mcp-server
    sudo systemctl enable archivematica-mcp-client
    sudo systemctl enable nginx

  SHELL

  config.vm.provision "shell", inline: <<-SHELL

    # YOU HAVE TO DO THIS MANUALLY FOR NOW! :)

    # sudo -i -u archivematica

    # export $(cat /etc/sysconfig/archivematica-storage-service)
    # cd /usr/share/archivematica/storage-service
    # sudo /usr/lib/archivematica/storage-service/bin/python manage.py migrate
    # sudo /usr/lib/archivematica/storage-service/bin/python manage.py collectstatic --noinpu

    # mysql -hlocalhost -uroot -e "CREATE DATABASE MCP CHARACTER SET utf8 COLLATE utf8_unicode_ci;"
    # mysql -hlocalhost -uroot -e "CREATE USER 'archivematica'@'localhost' IDENTIFIED BY 'demo';"
    # mysql -hlocalhost -uroot -e "GRANT ALL ON MCP.* TO 'archivematica'@'localhost';"
    # mysql -hlocalhost -uroot MCP < /usr/share/archivematica/MCPServer/mysql

    # export $(cat /etc/sysconfig/archivematica-dashboard)
    # cd /usr/share/archivematica/dashboard
    # /usr/lib/python2.7/archivematica/dashboard/bin/python manage.py syncdb --noinput
    # /usr/share/archivematica/MCPServer/mysql_dev .sh MCP

    # exit

    # sudo systemctl start archivematica-mcp-server
    # sudo systemctl restart archivematica-mcp-client
    # sudo systemctl start archivematica-dashboard
    # sudo cp /usr/bin/clamscan /usr/bin/clamdscan

    # Print IP address after provisioning
    ip addr | grep "dynamic eth1"

  SHELL

end
